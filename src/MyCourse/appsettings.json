{
    "Kestrel": {
        "Limits": {
          "MaxRequestBodySize": 5242880
        }
    },
    "Logging": {
        "LogLevel": {
          "Default": "Warning"
        }
    },
    "ConnectionStrings": {
        "Default": "Data Source=Data/MyCourse.db"
    },
    "Courses": {
        "PerPage": 10,
        "InHome": 3,
        "Order": {
                "By": "Rating",
                "Ascending": false,
				"Allow": ["Id", "Title", "Rating", "CurrentPrice"]
        }
    },
    "MemoryCache": {
    },
    "ResponseCache": {
        "Home": {
            "Duration": 60,
            "Location": "Client",
            "VaryByQueryKeys": ["page"]
        }
    },
    "ImageValidation": {
        "Key": "Si consiglia di mettere la Key per il servizio Computer Vision su variabile d'ambiente",
        "Endpoint": "Si consiglia di mettere l'Endpoint per il servizio Computer Vision su variabile d'ambiente",
        "MaximumAdultScore": 0.6
    }
}