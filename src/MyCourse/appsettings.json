{
    "Serilog": {
        "MinimumLevel": "Warning",
        "WriteTo": [
            { 
                "Name": "Console",
                "Args": {
                    "outputTemplate": "{Timestamp:HH:mm:ss}\t{Level:u3}\t{SourceContext}\t{Message}{NewLine}{Exception}"
                }
            },
            { 
                "Name": "File",
                "Args": {
                    "path": "Logs/log.txt",
                    "rollingInterval": "Day",
                    "retainedFileCountLimit": 14,
                    "restrictedToMinimumLevel": "Warning",
                    "formatter": "Serilog.Formatting.Json.JsonFormatter, Serilog"
                }
            }
        ]
    },
    "ConnectionStrings": {
        "Default": "Data Source=Data/MyCourse.db"
    },
    "Courses": {
        "PerPage": 10,
        "Order": {
                "By": "Rating",
                "Ascending": false,
				"Allow": ["Title", "Rating", "CurrentPrice"]
        }
    },
    "MemoryCache": {
        "SizeLimit": 1000
    },
    "ResponseCache": {
        "Home": {
            "Duration": 60,
            "Location": "Client",
            "VaryByQueryKeys": ["page"]
        }
    }
}