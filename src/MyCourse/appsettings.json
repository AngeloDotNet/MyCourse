{
    "Serilog": {
        "MinimumLevel": "Warning",
        "WriteTo": [
            { 
                "Name": "Console"
            },
            { 
                "Name": "File",
                "Args": {
                    "path": "Logs/log.txt",
                    "rollingInterval": "Day",
                    "retainedFileCountLimit": 14,
                    "restrictedToMinimumLevel": "Warning"
                }
            }
        ]
    },
    "ConnectionStrings": {
        "Default": "Data Source=Data/MyCourse.db"
    },
    "Courses": {
        "PerPage": 10,
        "Order": {
                "By": "Rating",
                "Ascending": false,
				"Allow": ["Title", "Rating", "CurrentPrice"]
        }
    },
    "MemoryCache": {
        "SizeLimit": 1000
    },
    "ResponseCache": {
        "Home": {
            "Duration": 60,
            "Location": "Client",
            "VaryByQueryKeys": ["page"]
        }
    }
}