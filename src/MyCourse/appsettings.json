{
    "Kestrel": {
        "Limits": {
          "MaxRequestBodySize": 5242880
        }
    },
    "Logging": {
        "LogLevel": {
          "Default": "Warning"
        }
    },
    "ConnectionStrings": {
        "Default": "Data Source=Data/MyCourse.db"
    },
    "Courses": {
        "PerPage": 10,
        "InHome": 3,
        "Order": {
                "By": "Rating",
                "Ascending": false,
				"Allow": ["Id", "Title", "Rating", "CurrentPrice"]
        }
    },
    "MemoryCache": {
    },
    "ResponseCache": {
        "Home": {
            "Duration": 60,
            "Location": "Client",
            "VaryByQueryKeys": ["page"]
        }
    },
    "ImageValidation": {
        "ApiKey": "Metti qui la tua apiKey per i Computer Vision Cognitive Services ottenuta da https://portal.azure.com/",
        "Endpoint": "Metti qui il tuo endpoint per i Computer Vision Cognitive Services ottenuta da https://portal.azure.com/",
        "MaximumAdultScore": 0.7
    }
}